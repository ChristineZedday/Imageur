{{ form_start(form) }}
<h2>Images disponibles</h2> 
       <div class='carrousel'>
      
       {% for image in images %}
          
            <figure>
                <img src="/uploads/petites_images/{{image.nom}}" alt="{{image.alt}}" width="150">
                <figcaption>{{ image.legend }}</figcaption>
               
				<a href="{{ path('slider_add_image', {slider: slider.id, image: image.id})}}">Ajouter l'image</a>
               
            </figure>
         
           
        {% endfor %}
         </div>
{{ form_end(form) }}