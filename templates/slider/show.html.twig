{% extends 'base.html.twig' %}

{% block title %}Slider{% endblock %}

{% block body %}
    <h1>Carrousel</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ slider.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ slider.nom }}</td>
            </tr>
            <tr>
                <th>Article</th>
                <td>{{ slider.article }}</td>
            </tr>
            <tr>
                <th>Section</th>
                <td>{{ slider.section }}</td>
            </tr>
        </tbody>
    </table>
     <div class="container">
    {% for image in slider.images %}
   
        <figure class="slide">
            <img class="clickable" src="/uploads/petites_images/{{image.nom}}" onclick="displaySlides(src);" alt="{{image.alt}}" />
            <figcaption hidden>
            {{image.legend}}
            </figcaption>
       </figure>
    

    {% endfor %}
    </div>
    <a href="{{ path('slider_index') }}">retourner à la liste</a>

    <a href="{{ path('slider_edit', {'id': slider.id}) }}">éditer</a>
      <a href="{{ path('slider_genere', {'id': slider.id}) }}">générer le carrousel PHP</a>

    {{ include('slider/_delete_form.html.twig') }}
{% endblock %}
