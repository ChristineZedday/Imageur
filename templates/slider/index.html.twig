{% extends 'base.html.twig' %}

{% block title %}Slider index{% endblock %}

{% block body %}
{{ parent() }}
<article>
    <h1>Index des carrousels</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                 <th>Article</th>
                <th>Section</th>
                <th>Généré?</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for slider in sliders %}
            <tr>
                
                <td>{{ slider.nom }}</td>
                 <td>{{ slider.section.article.titre }}</td>
                <td>{{ slider.section.titre }}</td>
                <td>{% if (slider.isGenerated) %}<a href="{{ fichiers~'slider_'~slider.nom~'.php' }}" target = "_blank">Oui</a> {% else %} Non {% endif %}</td>
                <td>
                    <a href="{{ path('slider_show', {'id': slider.id}) }}">{{ include('./_showicone.html.twig')}}</a>
                    <a href="{{ path('slider_edit', {'id': slider.id}) }}">{{ include('./_editicone.html.twig')}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Aucun enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('slider_new') }}">Nouveau carrousel</a>
    {{ include('./_crediticones.html.twig')}}
    </article>
     
{% endblock %}
