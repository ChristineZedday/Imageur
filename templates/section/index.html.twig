{% extends 'base.html.twig' %}

{% block title %}Section index{% endblock %}

{% block body %}
{{ parent() }}
<article>
    <h1>Index des sections d'article</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Article</th>
                <th>Titre</th>
                <th>Rang dans l'article</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                 <td>{{ section.article.titre }}</td>
                <td>{{ section.titre }}</td>
                 <td>{{ section.rang }}</td>
                <td>
                    <a href="{{ path('section_show', {'id': section.id}) }}">{{ include('./_showicone.html.twig')}}</a>
                    <a href="{{ path('section_edit', {'id': section.id}) }}">{{ include('./_editicone.html.twig')}}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Pas de sections enregistr√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  <p class="supertitre">  <a href="{{ path('section_new') }}">Ajouter une section</a></p>
    </article>
{% endblock %}
