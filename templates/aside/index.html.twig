{% extends 'base.html.twig' %}

{% block title %}Aside index{% endblock %}

{% block body %}
    <h1>Aside index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Nom</th>
                <th>Contenu</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for aside in asides %}
            <tr>
                <td>{{ aside.id }}</td>
                <td>{{ aside.titre }}</td>
                <td>{{ aside.nom }}</td>
                <td>{{ aside.contenu }}</td>
                <td>
                    <a href="{{ path('aside_show', {'id': aside.id}) }}">show</a>
                    <a href="{{ path('aside_edit', {'id': aside.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('aside_new') }}">Create new</a>
{% endblock %}
