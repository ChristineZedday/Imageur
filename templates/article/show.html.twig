{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
<article>
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ article.nom }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ article.titre }}</td>
            </tr>
            <tr>
                <th>Auteur</th>
                <td>{{ article.auteur }}</td>
            </tr>
            <tr>
                <th>Rubrique</th>
                <td>{{ article.rubrique.nom }}</td>
            </tr>
             <tr>
                <th>Description</th>
                <td>{{ article.description }}</td>
            </tr>
             <tr>
                <th>Mots clés</th>
                <td>{{ article.keywords }}</td>
            </tr>
        </tbody>
    </table>
<p>
    <a href="{{ path('article_index') }}">Retour à la liste</a>

    <a href="{{ path('article_edit', {'id': article.id}) }}">Modifier</a>

     <a href="{{ path('article_genere', {'id': article.id}) }}">Générer l'article</a>
     </p>

    {{ include('article/_delete_form.html.twig') }}
    </article>
{% endblock %}
