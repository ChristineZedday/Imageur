{% extends 'base.html.twig' %}

{% block title %}Image{% endblock %}

{% block body %}
    <h1>Image</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ image.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ image.nom }}</td>
            </tr>
            <tr>
                <th>Alt</th>
                <td>{{ image.alt }}</td>
            </tr>
            <tr>
                <th>Legend</th>
                <td>{{ image.legend }}</td>
            </tr>
            <tr>
            <th>Vignette</th>
            </tr>
              <td>{% if image.vignette %} oui {% else %} non {% endif %}</td>
            <tr>
                <th>Usage</th>
                <td>{{ image.pour }}</td>
            </tr>
             <tr>
                <th>Rang</th>
                <td>{{ image.rang }}</td>
            </tr>
        </tbody>
    </table>
      {%  if image.pour == 'carrousel' %}
        <img src="{{ asset('/uploads/petites_images/'~image.nom) }}"  width="150">
      {% else %}
      <img src="{{ asset('/uploads/'~image.nom) }}"  width="300">
      {% endif %}

    <a href="{{ path('image_index') }}">back to list</a>

    <a href="{{ path('image_edit', {'id': image.id}) }}">edit</a>

    {{ include('image/_delete_form.html.twig') }}
{% endblock %}
